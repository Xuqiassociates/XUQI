<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>XUQI Associates - Welcome</title>
  <link rel="stylesheet" href="styles.css" />
  <style>
    /* 全屏轮播背景 */
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    .slider {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .slide {
      position: absolute;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      opacity: 0;
      transition: opacity 1s ease-in-out;
    }

    .slide.active {
      opacity: 1;
    }

    /* 中央 Logo */
    .landing-logo {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      cursor: pointer;
      text-align: center;
    }

    .landing-logo img {
      width: 200px;
      height: auto;
    }

    /* 响应式 */
    @media (max-width: 768px) {
      .landing-logo img {
        width: 140px;
      }
    }
  </style>
</head>
<body>
  <!-- 背景轮播 -->
  <div class="slider">
    <div class="slide active" style="background-image: url('assets/hero1.jpg');"></div>
    <div class="slide" style="background-image: url('assets/hero2.jpg');"></div>
    <div class="slide" style="background-image: url('assets/hero3.jpg');"></div>
  </div>

  <!-- 中央 Logo -->
  <div class="landing-logo" onclick="goHome()">
    <img src="assets/Logo.png" alt="XUQI Associates Logo">
  </div>

  <script>
    // 点击 Logo 跳转主页
    function goHome() {
      window.location.href = 'index.html';
    }

    // 自动轮播背景
    const slides = document.querySelectorAll('.slide');
    let current = 0;

    setInterval(() => {
      slides[current].classList.remove('active');
      current = (current + 1) % slides.length;
      slides[current].classList.add('active');
    }, 5000); // 每 5 秒切换一次
  </script>
</body>
</html>
